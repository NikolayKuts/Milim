<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_background"
    android:padding="10dp"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDeckDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Deck name"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDeleteDeck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:background="@drawable/dialog_button_background"
        android:text="Delete deck"
        android:textColor="#ffffff"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeckDialogTitle" />

    <Button
        android:id="@+id/button_show_word_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:background="@drawable/dialog_button_background"
        android:text="Show word list"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteDeck" />
</androidx.constraintlayout.widget.ConstraintLayout>