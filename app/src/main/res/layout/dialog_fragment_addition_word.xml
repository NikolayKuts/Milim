<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/editTextNewWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Type a word"
        android:textStyle="italic"
        android:textColorHint="@color/hint"
        android:gravity="center"
        android:background="@null"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddWord"
        app:layout_constraintStart_toStartOf="@+id/editTextNewWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewWord"
        android:minHeight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/dialog_button_background"
        android:onClick="onInsertWordButtonClick"
        android:text="Add" />

    <Button
        android:id="@+id/buttonCancelWordAdding"
        app:layout_constraintEnd_toEndOf="@+id/editTextNewWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewWord"
        android:layout_width="wrap_content"
        android:minHeight="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:background="@drawable/dialog_button_background"
        android:onClick="onCancelWordAddingClick"
        android:text="Cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>