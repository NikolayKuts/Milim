<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.edition_word.EditWordActivity">

    <EditText
        android:id="@+id/editTextWordEdition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCancelChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:onClick="onCancelChangesClick"
        app:layout_constraintStart_toStartOf="@+id/editTextWordEdition"
        app:layout_constraintTop_toBottomOf="@+id/editTextWordEdition" />

    <Button
        android:id="@+id/buttonConfirmChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:onClick="onConfirmChangesClick"
        app:layout_constraintEnd_toEndOf="@+id/editTextWordEdition"
        app:layout_constraintTop_toBottomOf="@+id/editTextWordEdition" />
</androidx.constraintlayout.widget.ConstraintLayout>