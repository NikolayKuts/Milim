<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/editTextNewWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonAddWord"
        app:layout_constraintStart_toStartOf="@+id/editTextNewWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onInsertWordButtonClick"
        android:text="Add" />

    <Button
        android:id="@+id/buttonCancelWordAdding"
        app:layout_constraintEnd_toEndOf="@+id/editTextNewWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCancelWordAddingClick"
        android:text="Cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>